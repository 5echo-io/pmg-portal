# --- App ---
DJANGO_SECRET_KEY=change-me-super-secret
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your.domain.com

# If true, registration page is enabled
ENABLE_REGISTRATION=true

# Default admin bootstrap (created on install if missing)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin

# --- Postgres ---
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=pmg_portal
POSTGRES_USER=pmg_portal
POSTGRES_PASSWORD=change-me

# --- Runtime ---
APP_BIND=0.0.0.0:8097

# --- Development Features ---
# Enable development features (Facility management, etc.) - admin/superuser only
# Set to true to enable dev features, false to disable
ENABLE_DEV_FEATURES=false

# Restrict dev access to specific superusers (comma-separated emails/usernames)
# Leave empty to allow all superusers
# Example: DEV_ACCESS_USERS=admin@example.com,developer@example.com
DEV_ACCESS_USERS=
